      "@api/types": ["apps/api/src/types/index.ts"],
      "@api/utils": ["apps/api/src/utils/index.ts"],
      "@api/validators": ["apps/api/src/validators/index.ts"],
      "@api/constants": ["apps/api/src/constants/index.ts"],
      "@constants": ["libs/constants/src/index.ts"],
      "@gui/components": ["apps/gui/src/components/index.ts"],
      "@gui/forms": ["apps/gui/src/forms/index.ts"],
      "@gui/hooks": ["apps/gui/src/hooks/index.ts"],
