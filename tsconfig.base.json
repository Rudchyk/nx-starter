      "@gui/store": ["apps/gui/src/store/store.ts"],
      "@gui/templates": ["apps/gui/src/templates/index.ts"],
      "@gui/utils": ["apps/gui/src/utils/index.ts"],
      "@interfaces": ["libs/interfaces/src/index.ts"],
